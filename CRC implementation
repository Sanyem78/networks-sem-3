#include <iostream>

using namespace std;

int main()
{int flag=1;
   string g;
   cout<<"Enter generator polynomial"<<endl;
   cin>>g;
   char gen[g.length()];
    for (int i = 0; i < g.length(); i++) { 
        gen[i] = g[i]; 
    }
    while(gen[0]!='1'||gen[g.length()-1]!='1')
    {   
        cout<<"Enter generator polynomial"<<endl;
   cin>>g;
    gen[g.length()];
    for (int i = 0; i < g.length(); i++) { 
        gen[i] = g[i]; 
    }
    if(gen[0]=='1'&&gen[g.length()-1]=='1')
    {
        break;
    }
    }
   cout<<"Your generator polynomial is: "<<endl;
   for(int i=0;i<g.length();i++)
   {
       cout<<gen[i]<<" ";
   }
   int n;
   string trans;
   n=g.length();
   cout<<endl;
   cout<<"Enter your text message"<<endl;
   cin>>trans;
   char t[trans.length()];
   for(int i=0;i<trans.length();i++)
   {
       t[i]=trans[i];
   }
   int a;
   a=trans.length();
   while(n>=a)
   {
       cout<<"Enter your text message again"<<endl;
       cin>>trans;
       t[trans.length()];
       for(int i=0;i<trans.length();i++)
       {
           t[i]=trans[i];
       }
       a=trans.length();
       if(n<a)
       {
           break;
       }
   }
   cout<<"Your text message is "<<endl;
   for(int i=0;i<trans.length();i++)
   {
       cout<<t[i]<<" ";
   }
   for(int e=a;e<a+n-1;e++)
   {
       t[e]='0';
   }
   cout<<"Padded data is "<<t<<endl;
    return 0;
}
